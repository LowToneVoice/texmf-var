\RequirePackage{tikz}
\usetikzlibrary{decorations.markings}

% Define a central arrow style with optional label
\tikzset{
    ->-/.style={
        postaction={
            decorate,
            decoration={
                markings,
                mark=at position 0.5 with {\arrow{>}}
            }
        }
    },
    ->- label/.style n args={2}{
        ->-,
        postaction={
            decorate,
            decoration={
                markings,
                mark=at position 0.5 with {
                    \arrow{>};
                    \node[#1] at (0,0) {#2};
                }
            }
        }
    },
    bullet/.style={
        circle, fill,
        inner sep=2pt,
        label={#1}
    },
    cross/.style={
        cross out, 
        draw=black,
        fill=none,
        minimum size=1mm,
        inner sep=0mm,
        outer sep=0mm
    }
}

